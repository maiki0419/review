<h2><%= @range %> search for "<%= @word %>"</h2>



<% if @range == "User" %>
  <table class="table">
     <tr>
        <th></th>
        <th>name</th>
        <th>introduction</th>
        <th></th>
      </tr>
    <% @users.each do |user| %>
      <tr>
        <td><%= image_tag user.get_profile_image("50x50") %></td>
        <td><%= user.name %></td>
        <td><%= user.introduction %></td>
        <td><%= link_to 'Show', user, class: "user_#{user.id}" %></td>
      </tr>
    <% end %>
  </table>

<% else %>
    <table class="table">
      <tr>
       <th></th>
       <th>title</th>
       <th>Opinion</th>
      </tr>
      <% @books.each do |book| %>
      <tr>
        <td>
          <%= image_tag book.user.get_profile_image("50x50") %>
        </td>
        <td><%= link_to book.title,book, class: "book_#{book.id}" %></td>
        <td><%= book.body %></td>
      </tr>
    <% end %>
    </table>

<% end %>