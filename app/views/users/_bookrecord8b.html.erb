<h2>7日間分の投稿数</h2>
<table class="table table-bordered">
  <thead>
    <tr>
      <th>6日前</th>
      <th>5日前</th>
      <th>4日前</th>
      <th>3日前</th>
      <th>2日前</th>
      <th>1日前</th>
      <th>今日</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= @create_6day.count %></td>
      <td><%= @create_5day.count %></td>
      <td><%= @create_4day.count %></td>
      <td><%= @create_3day.count %></td>
      <td><%= @create_2day.count %></td>
      <td><%= @create_1day.count %></td>
      <td><%= @create_today.count %></td>
    </tr>
  </tbody>
</table>



<canvas id="myChart"></canvas>

<!-- ライブラリ読込 -->
 <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.3/Chart.min.js" integrity="sha256-R4pqcOYV8lt7snxMQO/HSbVCFRPMdrhAFMH+vr9giYI=" crossorigin="anonymous"></script>
 <script>
 var ctx = document.getElementById('myChart').getContext('2d');
 var chart = new Chart(ctx, {
     type: 'line',

     // データを指定
     data: {
         labels: ['6日前', '5日前', '4日前', '3日前', '2日前', '1日前', '今日'],
         datasets: [{
             label: '投稿した本の数',
             borderColor: 'rgb(75, 192, 192)',
             fill: false,
             data: [<%= @create_6day.count %>, <%= @create_5day.count %>, <%= @create_4day.count %>, <%= @create_3day.count %>, <%= @create_2day.count %>, <%= @create_1day.count %>, <%= @create_today.count %>]
         }]
     },

     // 設定はoptionsに記述
     options: {
       //タイトル
       title: {
         display: true,
         text: '7日間の投稿数の比較'
       }
     }
});
</script>

