<div class="container">
  <div class="row">
    <div class="col-6 mx-auto">
      <h2>Editing Group</h2>
      <%= render 'layouts/errors', obj: @group %>
      <%= form_with model: @group, local: true do |f| %>
        <%= f.label :"グループ名",class: "mt-3" %>
        <%= f.text_field :name,class:"form-control " %>
        <%= f.label :"紹介文",class: "mt-3" %>
        <%= f.text_area :introduction,class: "form-control" %>
        <%= f.label :"グループ画像",class: "mt-3" %>
        <%= f.file_field :image_id , class: "d-block" %>
        <%= f.submit "Update",class: "btn btn-success mt-3" %>

      <% end %>
    </div>
  </div>
</div>

